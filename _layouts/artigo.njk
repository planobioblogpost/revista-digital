---
layout: "base.njk"
---
<article class="artigo-pagina">
  <header class="artigo-cabecalho" style="background-image: url('{{ image }}');">
    <div class="artigo-cabecalho-overlay">
      <div class="container">
        <h1 class="artigo-titulo">{{ title }}</h1>
        <p class="artigo-autor">
          Escrito por: <a href="/equipa/{{ autor | slugify }}/">{{ autor }}</a>
        </p>
      </div>
    </div>
  </header>

  <div class="container artigo-conteudo">
    {{ content | safe }}
  </div>
</article>

<script type="application/ld+json">{...}</script>

<style>
  .artigo-cabecalho { 
    height: 50vh; background-size: cover; background-position: center; 
    position: relative; color: white;
  }
  .artigo-cabecalho-overlay {
    background: linear-gradient(to top, rgba(0, 60, 81, 0.8), rgba(0, 60, 81, 0.2));
    height: 100%; display: flex; align-items: flex-end; padding-bottom: 3rem;
  }
  .artigo-cabecalho .artigo-titulo { color: white; font-size: 3.5em; text-shadow: 0 2px 10px rgba(0,0,0,0.5); }
  .artigo-cabecalho .artigo-autor a { color: white; }
  .artigo-conteudo { padding-top: 2rem; max-width: 800px; }
  .artigo-conteudo h2 { margin-top: 2.5rem; }
</style>
